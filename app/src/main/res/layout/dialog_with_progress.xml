<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_att"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="start"
        android:text="@string/dialog_download_initial"
        android:textSize="13sp"
        tools:text="提示\n提示\n提示\n提示" />

    <ProgressBar
        android:id="@+id/dialog_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_att"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/dialog_att_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_progress_bar"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:textSize="12sp"
        tools:text="199KB/s" />

    <TextView
        android:id="@+id/dialog_att_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_progress_bar"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:textSize="12sp"
        tools:text="12MB/100MB(12%)" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/dialog_progress_keep_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_att_left"
        android:layout_marginLeft="15dp"
        android:checked="true"
        android:text="@string/word_keep_screen_on" />
</RelativeLayout>